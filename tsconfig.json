{
    "compilerOptions": {
        "sourceRoot": "./",
        "importHelpers": true,
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "esModuleInterop": true,
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/axios",
            "@nuxtjs/vuetify",
            "vuetify",
            "@nuxtjs/i18n"
        ]
    },
    "exclude": [
        "node_modules",
        ".nuxt"
    ]
}
